<div>
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <%= render "shared/components/hero" %>
  <div class="flex flex-row flex-wrap justify-center gap-2 p-6">
    <div id="arts" class="absolute -mt-20"></div>
    <% @arts.each do |art| %>
      <%= render "shared/components/graphics/art_icon", art: art %>
    <% end %>
  </div>
</div>
