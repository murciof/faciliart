<div class="border border-neutral p-4 rounded-xl w-full lg:w-auto overflow-x-auto lg:max-w-[72rem]">
  <table class="table">
    <thead>
      <tr>
        <th class="!relative">Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% items.each do |item| %>
        <tr>
          <td><%= item.name %></td>
          <td>
            <div class="flex flex-row gap-2">
              <%= link_to "Edit", edit_item_path(item), class: "btn btn-primary btn-outline" %>
              <%= button_to "Delete", item_path(item), method: :delete, class: "btn btn-primary btn-outline" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
