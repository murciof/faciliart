<div class="navbar bg-base-300 px-6 fixed z-50 border-b border-neutral gap-8">
  <div class="shrink-0">
    <%= link_to root_path do %><%= image_tag "brand.svg", class: "h-6" %><% end %>
  </div>
  <div class="flex-1">
    <%= form_with url: "/search", class: "form-control w-full", method: :get do |form| %>
      <%= form.text_field :search, class: "input input-bordered bg-base-300", placeholder: "Search Geniverse", value: params[:search] %>
    <% end %>
  </div>
  <div class="flex-none">
    <div class="dropdown dropdown-end">
      <ul class="menu menu-horizontal px-1 gap-4">
        <%= link_to 'New art', new_art_path, class: "btn btn-primary btn-outline" %>
        <% if user_signed_in? %>
          <li tabindex="0">
            <div class="btn btn-ghost"><%= current_user.name %></div>
            <ul class="text-primary menu menu-sm dropdown-content mt-2 p-2 rounded-box bg-base-300 border border-neutral">
              <li><%= link_to "Profile", user_path(current_user.id) %></li>
              <li><%= button_to "Sign out", destroy_user_session_path, method: :delete %></li>
              <% if current_user.is_admin? %>
                <hr class="border-t border-neutral mb-2 w-full"/>
                <li><%= link_to "Users", users_path %></li>
                <li><%= link_to "Orders", orders_path %></li>
                <li><%= link_to "Items", items_path %></li>
                <li><%= link_to "Item Sizes", item_sizes_path %></li>
              <% end %>
            </ul>
          </li>
        <% else %>
          <%= link_to "Sign in", new_user_session_path, class: "btn btn-primary btn-outline" %>
          <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary" %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
