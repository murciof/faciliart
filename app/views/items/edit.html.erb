<% if user_signed_in? && current_user.is_admin? %>
  <div class="mx-auto md:w-2/3 w-full">
    <h1 class="font-bold text-4xl">Editing item</h1>
    <%= render "form", item: @item %>
    <%= link_to "Show this item", @item, class: "btn btn-primary btn-outline" %>
    <%= link_to "Back to items", items_path, class: "btn btn-primary btn-outline" %>
  </div>
<% else %>
  <%= render "shared/errors/401" %>
<% end %>
