<div class="flex flex-col mx-auto w-full gap-4">
  <div class="font-bold text-center text-2xl">Forgot your password?</div>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="flex flex-col gap-4">
      <%= render "devise/shared/error_messages", resource: resource %>
      <label class="flex-1 input-group">
        <span class="input input-bordered border-r-0"><i class="ph ph-envelope-simple text-2xl"></i></span>
        <%= f.email_field :email, class: "input input-bordered bg-base-300 w-full", autofocus: true, autocomplete: "email", placeholder: "Email" %>
      </label>
      <%= render "devise/shared/links", form: f, submit: "Reset password" %>
    </div>
  <% end %>
</div>
