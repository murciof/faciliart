<div class="flex flex-col mx-auto w-full gap-4">

<div class="font-bold text-center text-2xl">Log in</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="flex flex-col gap-4">
  <div>
    <%= label_tag :email, "Email", class: "label-text" %>
    <%= f.email_field :email, class: "input input-bordered w-full", autofocus: true, autocomplete: "email" %>
  </div>

  <div>
    <%= label_tag :password, "Password", class: "label-text" %>
    <%= f.password_field :password, class: "input input-bordered w-full", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div>
      <%= f.check_box :remember_me, class: "self-center toggle focus:hidden" %>
      <%= f.label :remember_me, class: "label-text" %>
    </div>
  <% end %>  
  <%= render "devise/shared/links", form: f, submit: "Log in" %>
</div>
<% end %>


</div>
