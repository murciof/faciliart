<div class="flex flex-col mx-auto w-full gap-4">
  <div class="font-bold text-center text-2xl">Log in</div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="flex flex-col gap-4">
      <label class="flex-1 input-group">
        <span class="input input-bordered border-r-0"><i class="ph ph-envelope-simple text-2xl"></i></span>
        <%= f.email_field :email,
        class: "input input-bordered bg-base-300 w-full",
        autofocus: true,
        autocomplete: "email",
        placeholder: "Email" %>
      </label>
      <label class="flex-1 input-group">
        <span class="input input-bordered border-r-0"><i class="ph ph-password text-2xl"></i></span>
        <%= f.password_field :password,
        class: "input input-bordered bg-base-300 w-full",
        autocomplete: "current-password",
        placeholder: "Password" %>
      </label>
      <% if devise_mapping.rememberable? %>
        <div class="flex flex-row gap-2 items-center">
          <%= f.check_box :remember_me, class: "border bg-base-300 checkbox" %>
          <%= f.label :remember_me, class: "text-base" %>
        </div>
      <% end %>
      <%= render "devise/shared/links", form: f, submit: "Log in" %>
    </div>
  <% end %>
</div>
