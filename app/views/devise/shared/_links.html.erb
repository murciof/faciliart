<div class="flex flex-col space-y-2 2xl:flex-row 2xl:space-x-2 2xl:space-y-0">
  <%= form.submit submit, class: "btn btn-primary flex-1" %>
  <%- if controller_name != 'sessions' %>
    <%= link_to "Log in", new_session_path(resource_name), class:"btn btn-primary btn-outline flex-1" %>
  <% end %>
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Sign up", new_registration_path(resource_name), class:"btn btn-primary btn-outline flex-1" %>
  <% end %>
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class:"btn btn-primary btn-outline flex-1" %>
  <% end %>
  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class:"btn btn-primary btn-outline flex-1" %>
  <% end %>
  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class:"btn btn-primary btn-outline flex-1" %>
  <% end %>
  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class:"btn flex-1", data: { turbo: false } %>
    <% end %>
  <% end %>
  <%= link_to "Back", root_path, class: "btn btn-primary btn-outline flex-1" %>
</div>
