<div class="flex flex-col mx-auto w-full gap-4">
  <div class="font-bold text-center text-2xl">Sign up</div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="flex flex-col gap-4">
      <%= render "devise/shared/error_messages", resource: resource %>
      <label class="flex-1 input-group">
        <span class="input input-bordered border-r-0"><i class="ph ph-identification-card text-2xl"></i></span>
        <%= f.text_field :name, class: "input input-bordered bg-base-300 w-full", autofocus: true, autocomplete: "name", placeholder: "Name" %>
      </label>
      <label class="flex-1 input-group">
        <span class="input input-bordered border-r-0"><i class="ph ph-envelope-simple text-2xl"></i></span>
        <%= f.email_field :email,
        class: "input input-bordered bg-base-300 w-full",
        autofocus: true,
        autocomplete: "email",
        placeholder: "Email" %>
      </label>
      <label class="flex-1 input-group">
        <span class="input input-bordered border-r-0"><i class="ph ph-password text-2xl"></i></span>
        <%= f.password_field :password,
        class: "input input-bordered bg-base-300 w-full",
        autocomplete: "new-password",
        placeholder: "Password " + "(" + @minimum_password_length.to_s + " characters minimum" + ")" %>
      </label>
      <label class="flex-1 input-group">
        <span class="input input-bordered border-r-0"><i class="ph ph-password text-2xl"></i></span>
        <%= f.password_field :password_confirmation,
        class: "input input-bordered bg-base-300 w-full",
        autocomplete: "new-password",
        placeholder: "Password confirmation" %>
      </label>
      <%= render "devise/shared/links", form: f, submit: "Sign up" %>
    </div>
  <% end %>
</div>
